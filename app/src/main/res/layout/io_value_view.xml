<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <Switch
        android:id="@+id/sw_value"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/control_height"
        android:switchMinWidth="@dimen/control_width"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track"
        android:showText="true"
        android:layout_gravity="center_vertical"/>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:cardCornerRadius="10dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        android:layout_margin="@dimen/item_margin"
        android:layout_gravity="center_vertical"
        android:visibility="gone">
        <Spinner
            android:id="@+id/sp_value"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/control_height"/>
    </android.support.v7.widget.CardView>
    <EditText
        android:id="@+id/ed_value"
        android:layout_width="@dimen/control_width"
        android:layout_height="@dimen/control_height"
        style="@style/input_form_control"
        android:gravity="center"/>
</LinearLayout>
