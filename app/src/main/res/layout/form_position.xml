<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary">
        <ImageView
            android:background="@drawable/logo_skype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivide"
        android:layout_below="@+id/title_bar"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@+id/hr">
        <TextView
            android:id="@+id/title"
            android:text="@string/add_new_position"
            android:textSize="20sp"
            android:textColor="@color/colorBaseText"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/name_part"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:text="@string/position_name"
                android:textColor="@color/colorBaseText"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_postion_name"
                android:hint="@string/hint_position_name"
                android:textColorHint="@color/colorDivide"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textColor="@color/colorBlack"
                android:padding="10dp"
                android:background="@drawable/dialog_border_corner"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/description_part"
            android:layout_below="@+id/name_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:text="@string/position_descrition"
                android:textColor="@color/colorBaseText"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_position_description"
                android:hint="@string/hint_position_description"
                android:textColorHint="@color/colorDivide"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:textColor="@color/colorBlack"
                android:padding="10dp"
                android:background="@drawable/dialog_border_corner"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/position_button"
            android:layout_below="@+id/description_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp">
            <Button
                android:id="@+id/btn_close"
                android:text="Cancel"
                android:textColor="@color/colorRed"
                android:textStyle="bold"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/transparent"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btn_save"
                android:text="Save"
                android:textColor="@color/colorBlue"
                android:textStyle="bold"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
