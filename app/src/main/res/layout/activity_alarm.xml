<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tab_padding"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <TextView
        android:text="Add new Alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBaseText"
        android:textStyle="bold"
        android:padding="@dimen/tab_margin"
        android:textSize="16sp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/alarm_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/alarm_name"
            style="@style/input_form_control"/>
        <EditText
            android:id="@+id/alarm_priority"
            android:textColor="@color/colorBaseText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="@style/input_form_control"
            android:hint="@string/alarm_priority"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            android:padding="@dimen/tab_margin"
            android:gravity="center_vertical"></EditText>
        <Switch
            android:id="@+id/alarm_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tab_margin" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tab_margin">
        <TextView
            android:id="@+id/btn_save"
            android:text="Save"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="@color/colorBaseText"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_conner"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Select Condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/info_form_control"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/btn_delete_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    />
                <ImageView
                    android:id="@+id/btn_add_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_io"
                    android:padding="5dp"
                    android:layout_toLeftOf="@+id/btn_delete_condition"
                    android:clickable="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/list_io_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:orientation="vertical">

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBaseText"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Select Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/info_form_control"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/btn_delete_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    />
                <ImageView
                    android:id="@+id/btn_add_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_io"
                    android:padding="5dp"
                    android:layout_toLeftOf="@+id/btn_delete_action"
                    android:clickable="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/list_io_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
