<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#2D3035">
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:gravity="center_vertical">
        <TextView
            android:text="@string/add_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/btn_dialog_close"
            android:background="@drawable/ic_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:clickable="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivide"
        android:layout_below="@+id/title_bar"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hr">
        <LinearLayout
            android:id="@+id/name_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:text="@string/position_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_postion_name"
                android:hint="@string/hint_position_name"
                android:textColorHint="@color/colorDivide"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textColor="@color/colorBlack"
                android:padding="10dp"
                android:background="@drawable/dialog_border_corner"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/description_part"
            android:layout_below="@+id/name_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:text="@string/position_descrition"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_position_description"
                android:hint="@string/hint_position_description"
                android:textColorHint="@color/colorDivide"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:textColor="@color/colorBlack"
                android:padding="10dp"
                android:background="@drawable/dialog_border_corner"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/position_button"
            android:layout_below="@+id/description_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_save"
                android:text="Save"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGreen"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
