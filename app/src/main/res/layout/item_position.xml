<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/colorWhite">
    <com.daimajia.swipe.SwipeLayout
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSwipe"
            android:tag="Bottom3"
            android:weightSum="10">
            <TextView
                android:id="@+id/btn_add"
                android:text="Add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/row_list_view"
                android:background="@color/colorGreen"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/btn_edit"
                android:text="Edit"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                style="@style/row_list_view"
                android:layout_marginRight="1dp"
                android:layout_toLeftOf="@+id/btn_add"/>
            <TextView
                android:id="@+id/btn_delete"
                android:text="Delete"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorRed"
                style="@style/row_list_view"
                android:layout_marginRight="1dp"
                android:layout_toLeftOf="@+id/btn_edit"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/position_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_selector"
            android:elevation="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clickable="true">
            <com.github.johnkil.print.PrintView
                android:layout_alignParentLeft="true"
                android:id="@+id/arrow_icon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iconText="@string/ic_keyboard_arrow_right"
                app:iconColor="@color/colorBaseText"
                app:iconFont="fonts/material-icon-font.ttf"
                app:iconSize="20sp" />

            <com.github.johnkil.print.PrintView
                android:layout_alignWithParentIfMissing="true"
                android:id="@+id/icon"
                android:layout_toRightOf="@id/arrow_icon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iconText="@string/ic_hotel"
                app:iconColor="@color/colorBaseText"
                app:iconFont="fonts/material-icon-font.ttf"
                app:iconSize="24dp" />

            <TextView
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/icon"
                android:layout_toLeftOf="@+id/btn_open"
                android:textColor="@color/colorBaseText"
                android:id="@+id/node_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/ic_eye"
                android:id="@+id/btn_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>